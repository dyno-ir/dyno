{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "dyno-sim",
      "program": "${workspaceFolder}/build/tools/dyno-sim/dyno-sim",
      "args": [
        //"${workspaceFolder}/tools/dyno-sim/dyno-ir/test.dyno",
        "${workspaceFolder}/tools/dyno-sim/dyno-ir/counter.dyno",
        "${workspaceFolder}/venv/lib/python3.14/site-packages/cocotb/libs/libcocotbvpi_verilator.so"
      ],
      "env": {
        "DYLD_LIBRARY_PATH": "${workspaceFolder}/venv/lib/python3.14/site-packages/cocotb/libs/",
        "PYGPI_PYTHON_BIN": "${workspaceFolder}/venv/bin/python3",
        "COCOTB_TEST_MODULES": "Counter_tb",
        "PYTHONPATH": "${workspaceFolder}/tools/dyno-sim/python/"
      }
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug",
      "program": "${workspaceFolder}/build/tools/dyno-sv/dyno-sv",
      "args": [
        "${workspaceFolder}/sv/counter.sv"
      ],
    }
  ]
}